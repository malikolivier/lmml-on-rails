= form_for(setup_internal_liver_examination(exam), builder: VueFormBuilder, html: { id: 'internal_liver_examination' }, url: '') do |f|
  = f.hidden_field :id
  = f.number_field :weight
  = f.select :hardness, translated_internal_liver_hardnesses
  = f.select :congestion, translated_internal_liver_congestions
  = f.select :steatosis, translated_internal_liver_steatoses
  .panel.panel-default
    .panel-heading= t('activerecord.models.gall_bladder')
    .panel-body
      = f.fields_for :gall_bladder do |ff|
        = ff.select :bile_color, translated_gall_bladder_bile_colors
        = ff.select :bile_quantity, translated_gall_bladder_bile_quantities
        = ff.select :gallstones_quantity, translated_gall_bladder_gallstones_quantities
        = ff.select :gallstones_color, translated_gall_bladder_gallstones_colors
        = ff.select :gallstones_size, translated_gall_bladder_gallstones_sizes
  = yield f
