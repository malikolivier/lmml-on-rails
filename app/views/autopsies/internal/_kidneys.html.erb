<%
left = exam.left.first
right = exam.right.first

weight_phrases = []
weight_phrases.push("左#{left.weight}g") if left.try(:weight).present?
weight_phrases.push("右#{right.weight}g") if right.try(:weight).present?
%>
<%= weight_phrases.to_sentence_with_comma_and_full_stop %>

<%
all_symetric = left.try(:hardness) == right.try(:hardness) &&
               left.try(:capsule_removal) == right.try(:capsule_removal) &&
               left.try(:capsule_congestion) == right.try(:capsule_congestion) &&
               left.try(:pelvis_congestion) == right.try(:pelvis_congestion) &&
               left.try(:pelvis_petechia) == right.try(:pelvis_petechia)
%>
<br />
<% if all_symetric %>
  <%= left.description if left.present? %>
<% else %>
  <%= "左腎臓：#{left.description}" if left.present? %>
  <br />
  <%= "右腎臓：#{right.description}" if right.present? %>
<% end %>
<br />
