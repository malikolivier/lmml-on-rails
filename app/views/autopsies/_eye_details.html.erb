<% if eye.present? %>
  <% if eye.eyelid_congestion.present? %>
    左眼瞼の血管充盈は<%= I18n.t "intensity.#{eye.eyelid_congestion}" %>。
  <% end %>
  <% if eye.eyelid_petechia.present? %>
    左眼瞼に溢血点は<%= I18n.t "quantity.#{eye.eyelid_petechia}" %>。
  <% end %>
  <%= eye.eyelid_note %>
  <% if eye.conjunctiva_congestion.present? %>
    左眼球結膜の血管充盈は<%= I18n.t "intensity.#{eye.conjunctiva_congestion}" %>。
  <% end %>
  <% if eye.eyelid_petechia.present? %>
    左眼球結膜に溢血点は<%= I18n.t "quantity.#{eye.conjunctiva_petechia}" %>。
  <% end %>
  <%= eye.conjunctiva_note %>
<% end %>
