<% if !exam.O? && exam.sex.present? %><%= t "sex.#{exam.sex}" %>性屍。<% else %>性別が不明な屍。<% end %>
<%
phrases = []
height = exam.partial_body ? '全長' : '身長'
weight = exam.partial_body ? '重量' : '体重'
phrases.push("#{height}#{exam.height}cm") if exam.height.present?
phrases.push("#{weight}#{exam.weight}kg") if exam.weight.present?
%>
<%= phrases.to_sentence_with_comma_and_full_stop %>
<% if exam.constitution.present? %>
  体格、<%= exam.constitution %>。
<% end %>

<%-# Livor mortis description. Should be improved TODO: This is really shit-%>

<% exam.livores_mortis.heavy.each do |livor_mortis| %>
  死斑は<%= I18n.t "colors.#{livor_mortis.color}" %>で、<%= I18n.t "body_parts.#{livor_mortis.position}" %>面に高度に発見し、<%= I18n.t "colors.#{livor_mortis.on_finger_pressure}" %>。
<% end %>
<% exam.livores_mortis.middle.each do |livor_mortis| %>
  死斑は<%= I18n.t "colors.#{livor_mortis.color}" %>で、<%= I18n.t "body_parts.#{livor_mortis.position}" %>面に中等に発見し、<%= I18n.t "colors.#{livor_mortis.on_finger_pressure}" %>。
<% end %>
<% exam.livores_mortis.light.each do |livor_mortis| %>
  死斑は<%= I18n.t "colors.#{livor_mortis.color}" %>で、<%= I18n.t "body_parts.#{livor_mortis.position}" %>面に軽度に発見し、<%= I18n.t "colors.#{livor_mortis.on_finger_pressure}" %>。
<% end %>
<%= exam.livor_mortis_note %>

<%-# Rigor mortis description -%>

<% rigor_mortis_phrases = [] %>
<% RigorMortis.intensities.each do |intensity, intensity_index| %>
  <% joints = []
     exam.rigores_mortis.send(intensity).each do |rivor_mortis|
       joints.push(I18n.t "body_parts.#{rivor_mortis.joint}")
     end %>
  <% if joints.length > 0 %>
    <% rigor_mortis_phrases.push("#{joints.join('・')}で#{I18n.t "intensity.#{intensity}"}") %>
  <% end %>
<% end %>
<% if rigor_mortis_phrases.any? %>
  硬直は<%= rigor_mortis_phrases.join('、') %>。
<% end %>
<%= exam.rigor_mortis_note %>

<%-# Temperature -%>

<% if exam.rectal_temperature.present? %>
  <% if exam.rectal_temperature < 25 %>
    全身は冷却し、
  <% end %>
  剖検開始時の直腸温<%= exam.rectal_temperature %>℃
<% end %>
<% if exam.room_temperature.present? %>
（室温<%= exam.room_temperature %>℃）。
<% end %>
