= vue_form_for(exam) do |f|
  = f.hidden_field :id
  .panel.panel-default
    .panel-heading= t('activerecord.attributes.external_head_examination.hair')
    .panel-body
      .row
        .col-xs-6
          = f.select :hair_natural_color,
                     ExternalHeadExamination.translated_enum(:hair_natural_color)
        .col-xs-6
          = f.select :hair_dyed_color,
                     ExternalHeadExamination.translated_enum(:hair_dyed_color)
      .row
        .col-xs-6
          = f.number_field :top_hair_length
        .col-xs-6
          = f.number_field :side_hair_length
  = render 'nested_dual_form', form: f, method: :external_ear_examinations,
           fields: { bleeding: { type: :check_box } }
  = yield f
