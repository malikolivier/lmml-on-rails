<%= if exam.hair_natural_color.present?
      if exam.hair_dyed_color.blank? || exam.not_dyed?
        "頭髪は#{t "colors.#{exam.hair_natural_color}"}。"
      else
        "頭髪は#{t "colors.#{exam.hair_natural_color}"}で#{t "colors.#{exam.hair_dyed_color}"}に染められる。"
      end
    elsif exam.hair_dyed_color.present?
      "頭髪は#{t "colors.#{exam.hair_dyed_color}"}に染められる。"
    end
%>

<%
hair_length_phrases = []
hair_length_phrases.push("頭頂部で#{exam.top_hair_length}㎝") if exam.top_hair_length.present?
hair_length_phrases.push("側頭部で#{exam.side_hair_length}㎝") if exam.side_hair_length.present?
%>
<% if hair_length_phrases.any? %>
  長さ<%= hair_length_phrases.to_sentence_with_comma_and_full_stop %>
<% end %>

<% left_ear = exam.ears.left.take %>
<% right_ear = exam.ears.left.take %>
<% if left_ear.present? && right_ear.present? && left_ear.injury.blank? && right_ear.injury.blank? && !right_ear.bleeding? && !left_ear.bleeding? %>
  左右耳介に損傷なく、外耳道に出血なし。
<% else %>
  <% if left_ear.present? %>
    左耳介に損傷<% if left_ear.injury.present? %>あり<% else %>なく<% end %>、外耳道に出血<% if left_ear.bleeding? %>あり<% else %>なし<% end %>。
  <% end %>
  <% if right_ear.present? %>
    右耳介に損傷<% if right_ear.injury.present? %>あり<% else %>なく<% end %>、外耳道に出血<% if right_ear.bleeding? %>あり<% else %>なし<% end %>。
  <% end %>
<% end %>
