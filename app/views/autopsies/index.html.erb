<p id="notice"><%= notice %></p>
<%= button_to 'New Autopsy', new_autopsy_path,{method: :get,class:"btn btn-default"} %>
<h1>Autopsies</h1>

<table>
  <thead>
    <tr>
      <th>Completed</th>
      <th>Number</th>
      <th>Suspect</th>
      <th>Victim</th>
      <th>Place</th>
      <th>Autopsy date</th>
      <th>Starting time</th>
      <th>Ending time</th>
      <th>Police station</th>
      <th>Police inspector</th>
      <th>Court</th>
      <th>Judge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @autopsies.each do |autopsy| %>
      <tr>
        <td><%= autopsy.completed %></td>
        <td><%= autopsy.number %></td>
        <td><%= autopsy.suspect_id %></td>
        <td><%= autopsy.victim_id %></td>
        <td><%= autopsy.place_id %></td>
        <td><%= autopsy.autopsy_date %></td>
        <td><%= autopsy.starting_time %></td>
        <td><%= autopsy.ending_time %></td>
        <td><%= autopsy.police_station_id %></td>
        <td><%= autopsy.police_inspector_id %></td>
        <td><%= autopsy.court_id %></td>
        <td><%= autopsy.judge_id %></td>
        <td><%= button_to 'Show', browse_autopsy_path(autopsy,locale: I18n.locale),{method: :get,class:"btn btn-default"} %></td>
        <td><%= button_to 'Edit', edit_external_autopsy_path(autopsy, locale: I18n.locale),{method: :get,class:"btn btn-default"} %></td>
        <td><%= button_to 'Download',autopsy_lmml_file_path(autopsy,locale: I18n.locale),{method: :get,class:"btn btn-default"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
