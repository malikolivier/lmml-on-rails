<p id="notice"><%= notice %></p>

<h1>Body Areas</h1>

<table>
  <thead>
    <tr>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @body_areas.each do |body_area| %>
      <tr>
        <td><%= body_area.distance %></td>
        <td><%= link_to 'Show', body_area %></td>
        <td><%= link_to 'Edit', edit_body_area_path(body_area) %></td>
        <td><%= link_to 'Destroy', body_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

