<p id="notice"><%= notice %></p>

<h1>Injuries</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>When alive</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @injuries.each do |injury| %>
      <tr>
        <td><%= injury.description %></td>
        <td><%= injury.when_alive %></td>
        <td><%= injury.note %></td>
        <td><%= link_to 'Show', injury %></td>
        <td><%= link_to 'Edit', edit_injury_path(injury) %></td>
        <td><%= link_to 'Destroy', injury, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

